{
  "name": "591-crawler",
  "version": "2025.07.23",
  "description": "A Node.js web scraper for 591.com.tw rental properties with Discord notifications",
  "main": "crawler.js",
  "bin": {
    "591-crawler": "./crawler.js"
  },
  "scripts": {
    "start": "bun run scripts/start-production.js",
    "api": "bun run scripts/start-production.js",
    "crawl": "bun run crawler.js",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "test:unit": "bun test tests/unit",
    "test:integration": "bun test tests/integration",
    "test:integration:database": "bun test tests/integration/database.test.js",
    "dev:db:start": "docker-compose -f docker-compose.dev.yml up -d postgres-dev postgres-test",
    "dev:db:stop": "docker-compose -f docker-compose.dev.yml down",
    "dev:db:logs": "docker-compose -f docker-compose.dev.yml logs -f postgres-dev postgres-test",
    "dev:db:reset": "docker-compose -f docker-compose.dev.yml down -v && bun run dev:db:start",
    "dev:pgadmin": "docker-compose -f docker-compose.dev.yml --profile pgadmin up -d",
    "test:postgres:start": "bash scripts/test-postgres.sh start",
    "test:postgres:setup": "bash scripts/test-postgres.sh setup",
    "test:postgres:stop": "bash scripts/test-postgres.sh stop",
    "deploy:docker": "bash scripts/deploy.sh",
    "docker:logs": "docker-compose logs -f",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:setup": "bun run scripts/setup-database.js setup",
    "db:status": "bun run scripts/setup-database.js status",
    "db:test": "bun run scripts/setup-database.js test",
    "db:reset": "bun run scripts/setup-database.js reset",
    "db:optimize": "bun run scripts/apply-database-optimizations.js",
    "prepare": "is-ci || (command -v husky >/dev/null 2>&1 && husky) || true"
  },
  "keywords": [
    "591",
    "taiwan",
    "property",
    "rental",
    "crawler",
    "scraper",
    "discord",
    "notification",
    "real-estate",
    "monitoring"
  ],
  "author": "iml885203",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/iml885203/591.git"
  },
  "homepage": "https://github.com/iml885203/591#readme",
  "bugs": {
    "url": "https://github.com/iml885203/591/issues"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "dependencies": {
    "@prisma/client": "^6.12.0",
    "axios": "^1.10.0",
    "cheerio": "^1.1.2",
    "dotenv": "^17.2.0",
    "express": "^4.21.2",
    "fs-extra": "^11.3.0",
    "is-ci": "^4.1.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@testcontainers/postgresql": "^11.4.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "nock": "^14.0.6",
    "prisma": "^6.12.0",
    "supertest": "^7.1.3",
    "testcontainers": "^11.4.0"
  }
}
