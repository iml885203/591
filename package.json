{
  "name": "591-monorepo",
  "version": "2025.07.23",
  "description": "Monorepo for 591.com.tw rental monitoring with crawler and frontend",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "build": "bun run --filter='*' build",
    "test": "bun run --filter='*' test",
    "type-check": "bun run --filter='*' type-check",
    "crawler:build": "bun run --filter=@591/crawler build",
    "crawler:start": "bun run --filter=@591/crawler start",
    "crawler:api": "bun run --filter=@591/crawler api",
    "crawler:test": "bun run --filter=@591/crawler test",
    "crawler:test:unit": "bun run --filter=@591/crawler test:unit",
    "crawler:type-check": "bun run --filter=@591/crawler type-check",
    "frontend:dev": "bun run --filter=@591/frontend dev",
    "frontend:build": "bun run --filter=@591/frontend build"
  },
  "keywords": [
    "591",
    "taiwan",
    "property",
    "rental",
    "monorepo",
    "crawler",
    "frontend"
  ],
  "author": "iml885203",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/iml885203/591.git"
  },
  "engines": {
    "bun": ">=1.0.0",
    "npm": "Please use Bun instead of npm",
    "yarn": "Please use Bun instead of yarn",
    "pnpm": "Please use Bun instead of pnpm"
  },
  "packageManager": "bun@1.0.0",
  "devDependencies": {
    "husky": "^9.1.7",
    "is-ci": "^4.1.0"
  }
}