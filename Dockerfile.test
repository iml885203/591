FROM node:18-alpine

# 安裝系統依賴
RUN apk add --no-cache \
    git \
    curl \
    bash \
    postgresql-client

# 設置工作目錄
WORKDIR /app

# 複製 package 文件
COPY package*.json ./
COPY bun.lockb* ./

# 安裝依賴
RUN npm ci --only=production=false

# 安裝 Bun (可選，CI 中主要使用 Node.js)
RUN curl -fsSL https://bun.sh/install | bash || echo "Bun installation failed, continuing with Node.js"

# 複製源代碼
COPY . .

# 設置環境變數
ENV NODE_ENV=test
ENV PATH="/root/.bun/bin:$PATH"

# 生成 Prisma 客戶端
RUN npm run db:generate || echo "Prisma generation failed, continuing"

# 編譯 TypeScript
RUN npm run build || echo "Build failed, continuing with ts-node"

# 健康檢查
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
  CMD curl -f http://localhost:${API_PORT:-3000}/health || exit 1

# 暴露端口
EXPOSE 3000

# 默認命令
CMD ["npm", "run", "test:api:ci"]