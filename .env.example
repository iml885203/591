# 591 Crawler Configuration
# Copy this file to .env and configure your settings

# Discord webhook URL for notifications
# Get this URL from your Discord server: Server Settings → Integrations → Webhooks
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN

# Notification delay between messages (in milliseconds)
NOTIFICATION_DELAY=1000

# API Configuration
API_PORT=3000
API_KEY=your-secret-api-key-here

# Database Configuration
# For local development (SQLite)
DATABASE_PROVIDER=sqlite
DATABASE_URL="file:./data/crawler.db"

# For Railway production (PostgreSQL)
# DATABASE_PROVIDER=postgresql
# DATABASE_URL="postgresql://user:password@host:port/database?sslmode=require"

# Storage Configuration (legacy - will be migrated to database)
STORAGE_BASE_DIR=./data
STORAGE_DATA_FILE=./data/previous_data.json

# Environment
NODE_ENV=development